<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0F4F8"
    android:padding="20dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="303dp"
        android:layout_height="226dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/polmed" />

    <!-- TextView untuk Username -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1E88E5"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Username"
        android:layout_marginBottom="8dp" />

    <!-- EditText untuk input Email -->
    <EditText
        android:id="@+id/edemail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_edittext"
        android:layout_gravity="center"
        android:hint="Enter your email"
        android:inputType="textEmailAddress"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:padding="20dp"
        android:textColorHint="@color/hintColor" />

    <!-- TextView untuk Password -->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="#1E88E5"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Password"
        android:layout_marginBottom="8dp"/>

    <!-- EditText untuk input Password -->
    <EditText
        android:id="@+id/edpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edittext"
        android:padding="20dp"
        android:layout_marginRight="14dp"
        android:layout_marginLeft="14dp"
        android:hint="Enter your password"
        android:layout_gravity="center"
        android:textColorHint="@color/hintColor"
        android:inputType="textPassword"
        android:layout_marginBottom="32dp" />

    <!-- LinearLayout untuk mengatur Button Login dan Button Keluar secara sejajar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <!-- Button Login -->
        <Button
            android:id="@+id/btnlogin"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            app:backgroundTint="#1E88E5" />
    </LinearLayout>

</LinearLayout>
