<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#222831"
    android:padding="20dp"
    tools:context=".About">

    <TextView
        android:id="@+id/tvabout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:text="Tentang Kami"
        android:textColor="#00ADB5"
        android:textSize="40sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="267dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:src="@drawable/polmed" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:text="Selamat datang di aplikasi penghitung luas segitiga. Ini adalah aplikasi yang bertujuan untuk membantu pengguna dalam menghitung luas segitiga sesuai rumus profesional. Dengan aplikasi ini, kami percaya bahwa teknologi dapat membantu dan berguna untuk orang banyak."
        android:justificationMode="inter_word"
        android:textColor="#00ADB5"
        android:textSize="18dp" />

</LinearLayout>